<Window x:Class="Calculatrice_Hypothecaire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculatrice_Hypothecaire"
        xmlns:viewModel ="clr-namespace:Calculatrice_Hypothecaire.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2" Grid.RowSpan="6" BorderThickness="1" BorderBrush="Black" Margin="5,5,5,5">
            <Grid Grid.ColumnSpan="2" Grid.RowSpan="6" Background="GhostWhite">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition> 
                    <ColumnDefinition Width="1*"></ColumnDefinition> 
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                    <DataGrid x:Name="DataGrid"  
                              Grid.Row="0" 
                              Grid.Column="0" 
                              Grid.ColumnSpan="2"
                              Grid.RowSpan="4"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding ListSimulations}"
                              SelectedItem="{Binding SelectedSim}"
                              >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Simulations" Width="215" Binding="{Binding NomPrenom}" IsReadOnly="True"></DataGridTextColumn>
                    </DataGrid.Columns>
                                                        
                    </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
